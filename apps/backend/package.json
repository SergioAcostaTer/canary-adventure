    "nodemailer": "^6.9.8",
    "pg": "^8.16.3",
    "randomstring": "^1.3.0",
    "redis": "^4.7.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "validator": "^13.11.0",
