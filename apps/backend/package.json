{
  "name": "canary-adventure-api",
  "version": "1.0.0",
  "description": "Backend API for Canary Adventure â€“ smart travel assistant for personalized itineraries in the Canary Islands.",
  "main": "./src",
  "keywords": [
    "canary",
    "canary-islands",
    "travel",
    "itinerary",
    "express",
    "mongodb",
    "api",
    "tourism",
    "node",
    "ai"
  ],
  "scripts": {
    "start": "npm run clean && cross-env NODE_ENV=production ts-node --files -r tsconfig-paths/register ./src",
    "watch": "npm run clean && cross-env ts-node-dev --files --respawn --inspect -r tsconfig-paths/register ./src",
    "build": "npm run clean && cross-env NODE_ENV=production tsc && tsc-alias && npm run copy:files",
    "clean": "rimraf ./public",
    "copy:files": "cp .env ./public/.env && cp -R ./src/templates ./public",
    "seed": "ts-node --files -r tsconfig-paths/register ./src/seeds",
    "lint": "eslint ./src",
    "lint:write": "eslint ./src --fix",
    "prettier": "prettier \"**/*.+(js|jsx|ts|tsx|json|css|md)\" --check",
    "prettier:write": "prettier \"**/*.+(js|jsx|ts|tsx|json|css|md)\" --write"
  },
  "author": "Sergio Acosta",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/email-templates": "^10.0.4",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.6.0",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.2",
    "@types/randomstring": "^1.1.9",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
